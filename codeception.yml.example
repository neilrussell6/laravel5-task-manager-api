actor: Tester
paths:
    tests: tests
    log: tests/_output
    data: tests/_data
    support: tests/_support
    envs: tests/_envs
settings:
    bootstrap: _bootstrap.php
    colors: true
    memory_limit: 1024M
extensions:
    enabled:
        - Codeception\Extension\RunFailed
        - NeilRussell6\CodeceptionLaravel5Extensions\ArtisanMigrateExtension
    config:
        NeilRussell6\CodeceptionLaravel5Extensions\ArtisanMigrateExtension:
            db_connection: sqlite # must match DB_CONNECTION in .env-testing
            db_sqlite_path: storage/testing/database_testing.sqlite # must match DB_SQLITE_DATABASE in .env-testing